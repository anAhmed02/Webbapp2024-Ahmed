{
    "compilerOptions": {
      "moduleResolution": "node16",
      "module": "Node16", 
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": false, 
      "baseUrl": "./",
      "types": ["node"],
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }